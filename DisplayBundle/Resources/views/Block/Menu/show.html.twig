
{% if element is defined %}
    <ul>
        <li>
            <a href="{{ url(element.node.id) }}">{{ element.node.name }}</a>
            {% if element.child is defined %}
                {% for child in element.child %}
                    {% if child %}
                        {% include "PHPOrchestraDisplayBundle:Block/Menu:show.html.twig" with {"element": child} only %}
                    {% endif %}
                {% endfor %}
            {% endif %}
        </li>
    </ul>
{% elseif tree is defined %}
    <div id="{{ id }}" class="{{ class }}">
        {% for element in tree_formatter(tree) %}
            {% include "PHPOrchestraDisplayBundle:Block/Menu:show.html.twig" with {"element": element} only %}
        {% endfor %}
    </div>
{% endif %}
